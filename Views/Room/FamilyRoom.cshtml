@page
@model User

@{
    ViewBag.Title = "FamilyRoom";
}
<style>
    /* Add this style block in your HTML or link to an external stylesheet */

    /* Hide only the apax div */
    form .apax {
        display: none !important;
    }
</style>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
<link rel="stylesheet" type="text/css" href="~/css/room.module.css" />
<div class="main">
    <div class="focusContainer">
        <div class="fc">
            <h2>Family Room</h2>
            <p>
            </p>
        </div>
    </div>

    <div class="bookingContainer">

        <form id="bookingForm" action="@Url.Action("SaveUnverifiedBooking", "Booking")" method="post">
            <div class="startDate">
                <label>Start Date</label>
                <input type="date" id="myStartInputDate" name="StartDate" />
            </div>

            <div class="endDate">
                <label>End Date</label>
                <input type="date" id="myEndInputDate" name="EndDate" />
            </div>

            <div class="pax">
                <label>Pax</label>
                <input type="number" id="enterPax" name="Pax" min="1" />
            </div>

            <script>
                $(document).ready(function () {
                    var dtToday = new Date();
                    var month = dtToday.getMonth() + 1;
                    var day = dtToday.getDate();
                    var year = dtToday.getFullYear();

                    if (month < 10)
                        month = '0' + month.toString();
                    if (day < 10)
                        day = '0' + day.toString();

                    var maxDate = year + '-' + month + '-' + day;

                    $('#myStartInputDate').attr('min', maxDate);
                    $('#myEndInputDate').attr('min', maxDate);
                });
            </script>
            @Html.AntiForgeryToken()
            <button type="submit">Book Now</button>
        </form>
    </div>

</div>

<div class="about">
    <div class="title">
    </div>
    <div class="aboutContainer">
        <div class="imageContainer">
            <img src="@Url.Content("../images/room4.jpg")" height="700px" width="100%" />
        </div>
        <div>
            <div class="detachContainer">
                <h2>Unforgettable Moments, Shared Comfort</h2>
                <p>
                    Create lasting memories with your loved ones in our Family Room. Designed to accommodate the unique needs of families, 
                    this room offers ample space, comfortable bedding, and family-friendly amenities. 
                    Enjoy a home-away-from-home experience that ensures everyone in the family feels welcome and relaxed.
                </p>
                <form action="@Url.Action("SaveUnverifiedBooking", "Booking")" method="post">
                    <div class="apax">
                        <label>Pax</label>
                        <input type="number" id="enterPax" name="Pax" />
                    </div>
                    <button type="submit">Book Now</button>
                    @Html.AntiForgeryToken()
                </form>
            </div>
        </div>
    </div>
</div>

<div class="roomType">
    <div class="title">
        <h2>Exclusive Gateway Offers</h2>
        <p>
            Experience unparalleled luxury and tranquility in our meticulously designed rooms at Swift Hotel, where
            every detail is crafted to elevate your stay into a seamless blend of comfort and sophistication.
        </p>
    </div>
    <div class="roomContainer">
        <div class="box">
            <a href="@Url.Action("StandardRoom", "Room")" style="text-decoration: none; color: black;">
                <img src="@Url.Content("../images/room1.jpg")"
                     style="object-fit: cover; width: 380px; height: 250px; object-position: center;" />
                <div class="night">
                    <span>Standard Room</span>
                    <span>
                        @string.Format("₱{0:N2}", 1000)/night
                    </span>
                </div>
            </a>
        </div>
        <div class="box">
            <a href="@Url.Action("DeluxeRoom", "Room")" style="text-decoration: none; color: black;">
                <img src="@Url.Content("../images/room2.jpg")"
                     style="object-fit: cover; width: 380px; height: 250px; object-position: center;" />
                <div class="night">
                    <span>Deluxe Room</span>
                    <span>
                        @string.Format("₱{0:N2}", 1500)/night
                    </span>
                </div>
            </a>
        </div>
        <div class="box">
            <a href="@Url.Action("SupremeRoom", "Room")" style="text-decoration: none; color: black;">
                <img src="@Url.Content("../images/room3.jpg")"
                     style="object-fit: cover; width: 380px; height: 250px; object-position: center;" />
                <div class="night">
                    <span>Supreme Room</span>
                    <span>
                        @string.Format("₱{0:N2}", 2000)/night
                    </span>
                </div>
            </a>
        </div>
        <div class="box">
            <a href="@Url.Action("FamilyRoom", "Room")" style="text-decoration: none; color: black;">
                <img src="@Url.Content("../images/room4.jpg")"
                     style="object-fit: cover; width: 380px; height: 250px; object-position: center;" />
                <div class="night">
                    <span>Family Room</span>
                    <span>
                        @string.Format("₱{0:N2}", 2400)/night
                    </span>
                </div>
            </a>
        </div>
    </div>
</div>

<div class="faqss">
    <div class="title">
        <h2>Frequently Asked Questions</h2>
    </div>
    <div class="faqsFlexContainer">
        <div class="faqsCard">
            <h2>Can I see photos of the hotel rooms before booking?</h2>
            <p>Yes, each hotel listing includes photos and detailed information about the rooms and amenities.</p>
        </div>
        <div class="faqsCard">
            <h2>Are the prices on Swift Hotel per person or per room?</h2>
            <p>
                Prices are generally per room, per night. The number of guests included in the price is specified
                during the booking process.
            </p>
        </div>
        <div class="faqsCard">
            <h2>Do hotels on Swift Hotel include breakfast?</h2>
            <p>
                Some hotels offer complimentary breakfast, while others may charge an additional fee. Check the hotel
                details for this information.
            </p>
        </div>
        <div class="faqsCard">
            <h2>How do I contact Swift Hotel customer support?</h2>
            <p>
                Visit our "Contact Us" page for information on reaching our customer support team via email or phone.
            </p>
        </div>
        <div class="faqsCard">
            <h2>What do I do if I encounter issues during the booking process?</h2>
            <p>Contact our customer support for assistance, and we'll be happy to help you resolve any issues.</p>
        </div>
        <div class="faqsCard">
            <h2>
                Are there any special promotions or discounts available?
            </h2>
            <p>
                Check our website regularly for promotions, and subscribe to our newsletter to receive exclusive
                offers.
            </p>
        </div>
    </div>
</div>